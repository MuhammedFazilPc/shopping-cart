<section>
    <div class="container">

        <a href="/admin/add-products" class="btn btn-success btn-primary mt-2">Add product</a>

        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>

                    <td id="index">X</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.Type}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt="product image">
                    </td>
                    {{!-- <td><a href="/admin/edit/{{this._id}}" class="btn btn-primary">Edit</a></td> --}}
                    <td><a href="/admin/edit?id={{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete?id={{this._id}}" class="btn btn-danger"
                            onclick="return confirm('delete product')">Delete</a></td>
                </tr>

                {{/each}}

            </tbody>
        </table>
    </div>
    {{!-- <p id="indexNo">dfdghj</p> --}}
</section>
